<Window x:Class="DoAn.QuanLyNguoiDung"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAn"
        mc:Ignorable="d"
        Title="QuanLyNguoiDung" Height="450" Width="800"
    Background="#FFFDFD">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TIÊU ĐỀ + FORM NHẬP LIỆU -->
        <StackPanel Grid.Row="0" Margin="20,20,20,20" Background="#FFF9F9" >
            <TextBlock Text="QUẢN LÝ NGƯỜI DÙNG" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#444444" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,15"/>

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- CỘT TRÁI -->
                <Label Grid.Row="0" Grid.Column="0" Content="Mã người dùng:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txt_MaNguoiDung" Margin="5" Background="#F6FDEB" BorderBrush="Black" Height="25" />

                <Label Grid.Row="1" Grid.Column="0" Content="Tên đăng nhập:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txt_TenDangNhap" Margin="5" Background="#F6FDEB" BorderBrush="Black" Height="25"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Mật khẩu:" VerticalAlignment="Center"/>
                <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="txt_MatKhau" Margin="5" Background="#F6FDEB" BorderBrush="Black" Height="25"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Họ tên:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="txt_HoTen" Margin="5" Background="#F6FDEB" BorderBrush="Black" Height="25"/>

                <!-- CỘT PHẢI -->
                <Label Grid.Row="0" Grid.Column="2" Content="Mã vai trò:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="txt_MaVaiTro" Margin="5" Background="#F6FDEB" BorderBrush="Black" Height="25"/>

                <Label Grid.Row="1" Grid.Column="2" Content="Email:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="3" x:Name="txt_Email" Margin="5" Background="#F6FDEB" BorderBrush="Black" Height="25"/>

                <Label Grid.Row="2" Grid.Column="2" Content="Số điện thoại:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="3" x:Name="txt_SoDienThoai" Margin="5" Background="#F6FDEB" BorderBrush="Black" Height="25"/>

                <Label Grid.Row="3" Grid.Column="2" Content="Ngày tạo:" VerticalAlignment="Center"/>
                <DatePicker Grid.Row="3" Grid.Column="3" x:Name="txt_NgayTao" Margin="5" Background="#F6FDEB" BorderBrush="Black" Height="25"/>
            </Grid>

            <!-- Nút Sửa / Xóa -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,10">
                <Button Content="Sửa" Width="100" Margin="10,0" 
                        Background="#A8E6CF" BorderBrush="Black" Height="30"/>
                <Button Content="Xóa" Width="100" Margin="10,0" 
                        Background="#FFB6B9" BorderBrush="Black"/>
            </StackPanel>
        </StackPanel>

        <!-- TÌM KIẾM -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="15,15,15,15" Background="#FFF" >
            <TextBox VerticalContentAlignment="Center" 
                     x:Name="SearchBox" Width="300" 
                     Margin="0,0,10,0" 
                     Foreground="#666" 
                     Background="#FCEFEF" 
                     BorderBrush="#F5B7B1"
                     Text="Tìm kiếm theo mã hoặc tên"/>
            <Button x:Name="btn_Search" Content="Tìm kiếm" Margin="0,0,15,0" Padding="12,6" 
                    Background="#FFD3B6" Foreground="#333" BorderBrush="#F5B895"/>
            <Button Content=" + Thêm người dùng" Margin="420,0,15,0" Padding="12,6" 
                    Background="#A0CED9" Foreground="#333" BorderBrush="#89B8C0"/>
        </StackPanel>

        <!-- DATAGRID -->
        <DataGrid x:Name="UserDataGrid" Grid.Row="2" Margin="15,15,15,15" AutoGenerateColumns="False" CanUserAddRows="True" 
                  RowBackground="#FFFFFF" AlternatingRowBackground="#FAFAFA" BorderBrush="#DDD" BorderThickness="1" 
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã người dùng" Width="100" FontWeight="SemiBold" Foreground="#444"/>
                <DataGridTextColumn Header="Tên đăng nhập" Width="120" Foreground="#555"/>
                <DataGridTextColumn Header="Mật khẩu" Width="120" Foreground="#555"/>
                <DataGridTextColumn Header="Họ tên" Width="150" Foreground="#555"/>
                <DataGridTextColumn Header="Mã vai trò" Width="80" Foreground="#555"/>
                <DataGridTextColumn Header="Email" Width="180" Foreground="#555"/>
                <DataGridTextColumn Header="Số điện thoại" Width="120" Foreground="#555"/>
                <DataGridTextColumn Header="Ngày tạo" Width="100" Foreground="#555"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
