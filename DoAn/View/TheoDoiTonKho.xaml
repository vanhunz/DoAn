<Window x:Class="DoAn.View.TheoDoiTonKho"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAn.View"
        xmlns:vm="clr-namespace:DoAn.ViewModel"
        mc:Ignorable="d"
        Title="TheoDoiTonKho" Height="450" Width="800" Background="#F5F6FA"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0 0 0 20">
            <TextBlock Text="Theo dõi tồn kho"
                       FontSize="32" FontWeight="Bold"
                       Foreground="#2C3E50"/>
        </DockPanel>

        <!-- Thống kê dạng Card -->
        <Grid Grid.Row="1" Margin="0 0 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Card 1 -->
            <Border Background="#3498DB" CornerRadius="16" Padding="20" Margin="0 0 20 0" Grid.Column="0">
                
                <StackPanel>
                    <TextBlock Text="Tổng sản phẩm" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="{Binding TongSanPham}" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0 10 0 0"/>
                </StackPanel>
            </Border>

            <!-- Card 2 -->
            <Border Background="#E67E22" CornerRadius="16" Padding="20" Margin="0 0 20 0" Grid.Column="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Sắp hết hàng" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="{Binding SapHetHang}" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0 10 0 0"/>
                </StackPanel>
            </Border>

            <!-- Card 3 -->
            <Border Background="#E74C3C" CornerRadius="16" Padding="20" Grid.Column="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Hết hàng" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="{Binding HetHang}" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0 10 0 0"/>
                </StackPanel>
            </Border>
        </Grid>
        <Border Grid.Row="2" Background="Azure" CornerRadius="12" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Danh sách sản phẩm" 
                           FontSize="20" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0 0 0 10"/>

                <DataGrid Grid.Row="1" ItemsSource="{Binding DanhSachSanPham}" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã SP" Binding="{Binding MaHang}" Width="100"/>
                        <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding TenHang}" Width="*"/>
                        <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" Width="120"/>
                        <DataGridTextColumn Header="Đơn vị" Binding="{Binding DonVi}" Width="120"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
