<Window x:Class="DoAn.QuanLyNhapKho"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAn"
        mc:Ignorable="d"
        Title="QuanLyNhapKho" Height="550" Width="800">
    <Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="388*"/>
                <ColumnDefinition Width="385*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Nhập thông tin phiếu nhập vanhuan -->
            <GroupBox Header="Thông tin nhập kho" Margin="10,10,9.6,9.8" Grid.ColumnSpan="2">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Mã phiếu:" Grid.Row="0" Grid.Column="0" Margin="5"/>
                    <TextBox x:Name="txt_MaPhieu" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Mã hàng:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                    <TextBox x:Name="txt_MaHang" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Số lượng:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                    <TextBox x:Name="txt_SoLuong" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Ngày nhập:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                    <DatePicker x:Name="dp_NgayNhap" Grid.Row="3" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Nhà cung cấp:" Grid.Row="4" Grid.Column="0" Margin="5"/>
                    <TextBox x:Name="txt_NhaCungCap" Grid.Row="4" Grid.Column="1" Margin="5"/>
                </Grid>
            </GroupBox>

            <!-- Các nút chức năng -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="147,220,146.6,9.8" Grid.ColumnSpan="2">
                <Button Content="Lưu" Width="100" Margin="10" Click="Button_Click" />
                <Button Content="Sửa" Width="100" Margin="10" />
                <Button Content="Xoá" Width="100" Margin="10"/>
                <Button Content="Tìm kiếm" Width="100" Margin="10" />
            </StackPanel>

            <!-- Bảng hiển thị dữ liệu -->
            <DataGrid x:Name="DG_NhapKho" Grid.Row="1" Margin="10,10.2,9.6,10" AutoGenerateColumns="True"
                   Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</Window>
