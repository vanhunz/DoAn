<Window x:Class="DoAn.QuanLyThongTinHangHoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="QuanLyThongTinHangHoa" Height="600" Width="1100">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox Header="Main Menu" FontSize="14" Grid.Row="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="⚠️" Margin="0,5"/>
                        <Button Grid.Row="0" Grid.Column="1" Margin="5" 
        Content="Cảnh báo tồn kho" Click="BtnCanhBaoTonKho_Click"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="⏰" Margin="0,5"/>
                        <Button Grid.Row="1" Grid.Column="1" Margin="5" 
        Content="Cảnh báo HSD" Click="BtnCanhBaoHSD_Click"/>
                        <Label Grid.Row="2" Grid.Column="0" Content="📤" Margin="0,5"/>
                        <Button Grid.Row="2" Grid.Column="1" Margin="5" 
        Content="Xuất .csv" Click="BtnXuat_Click"/>
                        <Label Grid.Row="3" Grid.Column="0" Content="📊" Margin="0,5"/>
                        <Button Grid.Row="3" Grid.Column="1" Margin="5" 
        Content="Báo cáo nhanh" Click="BtnBaoCao_Click"/>
                        <Label Grid.Row="4" Grid.Column="0" Content="📥" Margin="0,5"/>
                        <Button Grid.Row="4" Grid.Column="1" Margin="5" 
        Content="Nhập bằng file" Click="BtnNhap_Click"/>

                    </Grid>
                </GroupBox>

                <GroupBox Header="Thông tin ứng dụng" FontSize="14" Grid.Row="1">
                    <StackPanel Margin="10">
                        <TextBlock Text="📦 Phần mềm quản lý kho" 
                   FontWeight="Bold" 
                   Foreground="DarkBlue" 
                   FontSize="14" 
                   Margin="0,5"/>
                        <TextBlock Text="Phiên bản: 1.0.0" 
                   FontStyle="Italic" 
                   Foreground="Gray" 
                   Margin="0,2"/>
                        <TextBlock Text="Tác giả: Nhóm 6" 
                   Foreground="#6A1B9A" 
                   Margin="0,2"/>
                        <TextBlock Text="Liên hệ: Vovanhuanhjhj@email.com" 
                   Foreground="DarkGreen" 
                   Margin="0,5"/>
                    </StackPanel>
                </GroupBox>

            </Grid>
            <GroupBox Grid.Column="1" Header="Quản lý thông tin hàng hóa">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtSearch"
                                 Grid.Column="0"
                                 Margin="2"
                                 VerticalContentAlignment="Center"
                                 KeyUp="txtSearch_KeyUp"/>
                        <Button x:Name="btnSearch" 
                                Grid.Column="1" 
                                Content="Tìm kiếm" 
                                Margin="2" 
                                Click="BtnSearch_Click"/>
                        <Button x:Name="btnBack" 
                                Grid.Column="2" 
                                Content="UpDate Dữ Liệu" 
                                Margin="2" 
                                Click="BtnBack_Click"/>
                    </Grid>
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="2">
                        <GroupBox Header="Thống kê sản phẩm" FontSize="14" Margin="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Button x:Name="btnThongKe" 
                Content="Xem thống kê" 
                Grid.Row="0" 
                Margin="5" 
                Click="btnThongKe_Click"/>

                                <TextBlock x:Name="txtThongKe" 
                   Grid.Row="1" 
                   Margin="10" 
                   TextWrapping="Wrap"
                   FontWeight="Bold"
                   Foreground="DarkBlue"/>
                            </Grid>
                        </GroupBox>


                        <GroupBox Header="Sắp xếp theo" FontSize="14" Margin="2">
                            <StackPanel>
                                <Button x:Name="btnSapXepGiaNhap" Content=" Giá nhập" Margin="2" Click="BtnSapXepGiaNhap_Click"/>
                                <Button x:Name="btnSapXepGiaXuat" Content=" Giá xuất" Margin="2" Click="BtnSapXepGiaXuat_Click"/>
                                <Button x:Name="btnSapXepSoLuong" Content=" Số lượng tồn" Margin="2" Click="BtnSapXepSoLuong_Click"/>
                                <Button x:Name="btnSapXepTenHang" Content=" Tên hàng" Margin="2" Click="BtnSapXepTenHang_Click"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Chức năng" FontSize="14" Margin="2">
                            <StackPanel>
                                <Button x:Name="btnThem" Content="➕ Thêm" Margin="2" Click="BtnThem_Click"/>
                                <Button x:Name="btnSua" Content="✏️ Sửa" Margin="2" Click="BtnSua_Click"/>
                                <Button x:Name="btnXoa" Content="❌ Xóa" Margin="2" Click="BtnXoa_Click"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                    <DataGrid x:Name="lvHangHoa" 
          Grid.Row="1" Grid.Column="1" 
          AutoGenerateColumns="False" 
          CanUserAddRows="True"
          IsReadOnly="False"
          Margin="5"
          RowEditEnding="lvHangHoa_RowEditEnding"
          ColumnWidth="Auto">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã hàng" 
                            Binding="{Binding MaHang}" 
                            IsReadOnly="True"
                            Width="SizeToCells"/>

                            <DataGridTextColumn Header="Tên hàng" 
                            Binding="{Binding TenHang, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            Width="SizeToCells"/>

                            <DataGridTextColumn Header="Giá nhập" 
                            Binding="{Binding GiaNhap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            Width="SizeToCells"/>

                            <DataGridTextColumn Header="Giá xuất" 
                            Binding="{Binding GiaXuat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            Width="SizeToCells"/>

                            <DataGridTextColumn Header="Số lượng tồn" 
                            Binding="{Binding SoLuongTon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            Width="SizeToCells"/>

                            <DataGridTextColumn Header="NSX" 
                            Binding="{Binding NSX, Mode=TwoWay, StringFormat={}{0:dd/MM/yyyy}, UpdateSourceTrigger=PropertyChanged}" 
                            Width="SizeToCells"/>

                            <DataGridTextColumn Header="HSD" 
                            Binding="{Binding HSD, Mode=TwoWay, StringFormat={}{0:dd/MM/yyyy}, UpdateSourceTrigger=PropertyChanged}" 
                            Width="SizeToCells"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnPrev" Grid.Column="0" Content="⮜ Previous" Margin="2" Click="BtnPrev_Click"/>
                        <TextBlock x:Name="txtPage" Grid.Column="2" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
                        <Button x:Name="btnNext" Grid.Column="5" Content="Next ⮞" Margin="2" Click="BtnNext_Click"/>
                    </Grid>
                    <Border x:Name="productDetailPanel" 
                            Grid.Row="1" Grid.Column="1"
                            Background="LightGray"
                            CornerRadius="5"
                            Padding="10"
                            Visibility="Collapsed"
                            Margin="5">
                        <StackPanel>
                            <TextBlock x:Name="lblDetail" FontWeight="Bold" FontSize="16"/>
                            <Button Content="X" HorizontalAlignment="Right" Click="BtnCloseDetail_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
