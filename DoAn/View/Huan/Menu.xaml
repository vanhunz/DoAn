<Window x:Class="DoAn.View.Huan.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý kho" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#E3F2FD">

    <Grid Margin="20">

        <!-- Chia 2 cột cho button -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Cột trái -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" >
            <StackPanel Margin="0,15">
                <Button Content="👤 Quản lý người dùng" Width="220" Height="50" 
                        Background="#1E88E5" Foreground="White" FontWeight="Bold"
                        BorderThickness="0"/>
                <TextBlock Text="Người A" Foreground="#6A1B9A" FontStyle="Italic" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,15">
                <Button Content="📥 Quản lý nhập kho" Width="220" Height="50"
                        Background="#43A047" Foreground="White" FontWeight="Bold"
                        BorderThickness="0"/>
                <TextBlock Text="Người B" Foreground="#6A1B9A" FontStyle="Italic" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,15">
                <Button Content="📤 Quản lý xuất kho" Width="220" Height="50"
                        Background="#FB8C00" Foreground="White" FontWeight="Bold"
                        BorderThickness="0"/>
                <TextBlock Text="Người C" Foreground="#6A1B9A" FontStyle="Italic" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Cột phải -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <StackPanel Margin="0,15">
                <Button Content="🛒 QL thông tin hàng hóa" Width="220" Height="50"
                        Background="#8E24AA" Foreground="White" FontWeight="Bold"
                        BorderThickness="0"/>
                <TextBlock Text="Người D" Foreground="#6A1B9A" FontStyle="Italic" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,15">
                <Button Content="📊 Theo dõi tồn kho" Width="220" Height="50"
                        Background="#3949AB" Foreground="White" FontWeight="Bold"
                        BorderThickness="0"/>
                <TextBlock Text="Người E" Foreground="#6A1B9A" FontStyle="Italic" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Margin="0,15">
                <Button Content="🔑 Đăng nhập/Đăng ký" Width="220" Height="50"
                        Background="#E53935" Foreground="White" FontWeight="Bold"
                        BorderThickness="0"/>
                <TextBlock Text="Người F" Foreground="#6A1B9A" FontStyle="Italic" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
