<Window x:Class="DoAn.View.Huan.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý kho" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles2.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#f4f6f9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Background="#1E88E5" VerticalAlignment="Stretch">
            <TextBlock Text="📦 Menu" 
                       Foreground="White" FontWeight="Bold" FontSize="20"
                       Margin="20 20 0 30"/>
            <Button Content="👤  Quản lý người dùng"
                    Click="QuanLyNguoiDung_Click"/>
            <Button Content="📥  Quản lý nhập kho"
                    Click="QuanLyNhapKho_Click"/>
            <Button Content="📤  Quản lý xuất kho"
                    Click="QuanLyXuatKho_Click"/>
            <Button Content="🛒  QL thông tin hàng hóa"
                    Click="QuanLyThongTinHangHoa_Click"/>
            <Button Content="📊  Theo dõi tồn kho"
                    Click="TheoDoiTonKho_Click"/>
            <Button Content="🔑  Đăng nhập/Đăng ký"
                    Click="AuthWindow_Click"/>

            <StackPanel VerticalAlignment="Bottom" Margin="0,40,0,10">
                <Button Content="🚪 Thoát" Background="#e53935"
                        Click="Exit_Click"/>
            </StackPanel>
        </StackPanel>
        <Grid Grid.Column="1" Background="White">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Sau Update"
                           FontSize="26" FontWeight="Bold" Foreground="#333"
                           Margin="0 0 0 20"/>
                <TextBlock Text="hế lô thầy"
                           FontSize="16" Foreground="#666"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
