<Window x:Class="DoAn.QuanLyXuatKho"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAn"
        mc:Ignorable="d"
        Title="QuanLyXuatKho" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="QUẢN LÝ XUẤT KHO" FontSize="20" FontWeight="Bold" Margin="10">
            <StackPanel>
                <TextBlock Text="Quản lý và theo dõi các đơn xuất kho" 
                           FontSize="12" Foreground="Gray" />
            </StackPanel>
        </GroupBox>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Background="AliceBlue" CornerRadius="10" Padding="10" Margin="5" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Tổng đơn xuất" Foreground="Gray"/>
                    <TextBlock Text="1,247" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="+12%" Foreground="Green"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Background="AliceBlue" CornerRadius="10" Padding="10" Margin="5" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Chờ xử lý" Foreground="Gray"/>
                    <TextBlock Text="89" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="-5%" Foreground="Red"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" Background="AliceBlue" CornerRadius="10" Padding="10" Margin="5" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Đã hoàn thành" Foreground="Gray"/>
                    <TextBlock Text="1,158" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="+18%" Foreground="Green"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="3" Background="AliceBlue" CornerRadius="10" Padding="10" Margin="5" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Giá trị xuất" Foreground="Gray"/>
                    <TextBlock Text="₫2.4M" FontSize="22" FontWeight="Bold"/>
                    <TextBlock Text="+25%" Foreground="Green"/>
                </StackPanel>
            </Border>
        </Grid>
        <!-- Thanh công cụ-->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <TextBox Width="200" Margin="5" Padding="5" Text="Tìm kiếm đơn xuất..." 
                     Foreground="Gray"/>
            <Button Content="Thêm đơn" Width="100" Margin="5" Background="DimGray" Foreground="White" 
                    FontWeight="Bold" Padding="5" />
            <Button Content="Xóa đơn" Width="100" Margin="5" Background="DimGray" Foreground="White" 
                    FontWeight="Bold" Padding="5" />
            <Button Content="Cập nhật" Width="100" Margin="5" Background="DimGray" Foreground="White" 
                    FontWeight="Bold" Padding="5" />
        </StackPanel>

        <!-- DataGrid-->
        <DataGrid Grid.Row="3" Width="auto" Margin="10" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã đơn" Width="100"/>
                <DataGridTextColumn Header="Khách hàng" Width="*"/>
                <DataGridTextColumn Header="Tên hàng" Width="2*"/>
                <DataGridTextColumn Header="Số lượng" Width="70"/>
                <DataGridTextColumn Header="Giá trị" Width="120"/>
                <DataGridTextColumn Header="Ngày xuất" Width="120"/>
                <DataGridTextColumn Header="Trạng thái" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
