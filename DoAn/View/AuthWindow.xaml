<Window x:Class="DoAn.View.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DoAn.ViewModel"
        Title="Authentication" Height="540" Width="820"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles1.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <vm:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>

            <!-- Style chung cho Button -->
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Background" Value="#3498db"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980b9"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1f6391"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <vm:AuthViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#e0f7fa" Offset="0"/>
                <GradientStop Color="#bbdefb" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- LOGIN -->
        <Grid Visibility="{Binding CurrentPage,
                           Converter={StaticResource StringToVisibilityConverter},
                           ConverterParameter=Login}">
            <Border CornerRadius="12" Background="White" Padding="30" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Width="420"
                    BorderBrush="#3498db" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.25"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Đăng nhập" FontSize="22" FontWeight="Bold"
                               Margin="0 0 0 20" HorizontalAlignment="Center"/>

                    <!-- Grid cho input -->
                    <Grid Margin="0 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Tên đăng nhập" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Height="28"
                                 Text="{Binding LoginUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,10,5"/>
                    </Grid>

                    <Grid Margin="0 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Mật khẩu" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="LoginPasswordBox" Grid.Column="1" Height="28"
                                     PasswordChanged="LoginPasswordBox_PasswordChanged" Margin="0,2,10,1.333"/>
                    </Grid>

                    <Button Content="Đăng nhập" Command="{Binding LoginCommand}" Height="32"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Quên mật khẩu" Command="{Binding ShowForgotCommand}" Background="#31363B"/>
                        <Button Content="Đăng ký" Command="{Binding ShowRegisterCommand}" Background="#FF8484"/>
                    </StackPanel>

                    <!-- Label hướng dẫn tài khoản mặc định -->
                    <TextBlock Text="Tài khoản: admin   Mật khẩu: 123456"
                               Foreground="Gray" FontStyle="Italic" 
                               FontSize="12" Margin="0,15,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- FORGOT PASSWORD -->
        <Grid Visibility="{Binding CurrentPage,
                           Converter={StaticResource StringToVisibilityConverter},
                           ConverterParameter=Forgot}">
            <Border CornerRadius="12" Background="White" Padding="30" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Width="420"
                    BorderBrush="#e67e22" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.25"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Quên mật khẩu" FontSize="22" FontWeight="Bold"
                               Margin="0 0 0 20" HorizontalAlignment="Center"/>

                    <!-- Grid input -->
                    <Grid Margin="0 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Tên đăng nhập" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding ForgotUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid Margin="0 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Email hoặc SĐT" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding ForgotContact, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Button Content="Xác minh" Command="{Binding CheckForgotCommand}" Background="#e67e22"/>

                    <StackPanel Visibility="{Binding ShowResetFields, Converter={StaticResource BoolToVis}}">
                        <Grid Margin="0 8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Mật khẩu mới" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="NewPassBox" Grid.Column="1"
                                         PasswordChanged="NewPassBox_PasswordChanged"/>
                        </Grid>

                        <Grid Margin="0 8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Xác nhận MK" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="ConfirmPassBox" Grid.Column="1"
                                         PasswordChanged="ConfirmPassBox_PasswordChanged"/>
                        </Grid>

                        <Button Content="Đổi mật khẩu" Command="{Binding ResetPasswordCommand}" Background="#27ae60"/>
                    </StackPanel>

                    <Button Content="Quay lại" Command="{Binding ShowLoginCommand}" Background="#95a5a6"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- REGISTER -->
        <Grid Visibility="{Binding CurrentPage,
                           Converter={StaticResource StringToVisibilityConverter},
                           ConverterParameter=Register}">
            <Border CornerRadius="12" Background="White" Padding="30" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Width="420"
                    BorderBrush="#9b59b6" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.25"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Đăng ký" FontSize="22" FontWeight="Bold"
                               Margin="0 0 0 20" HorizontalAlignment="Center"/>

                    <!-- Grid input -->
                    <Grid Margin="0 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Tên đăng nhập" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding RegUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid Margin="0 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Mật khẩu" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="RegisterPasswordBox" Grid.Column="1"
                                     PasswordChanged="RegisterPasswordBox_PasswordChanged"/>
                    </Grid>

                    <Grid Margin="0 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Họ tên" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding RegFullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid Margin="0 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Email" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding RegEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Grid Margin="0 8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="SĐT" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding RegPhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>

                    <Button Content="Tạo tài khoản" Command="{Binding RegisterCommand}" Background="#9b59b6"/>
                    <Button Content="Quay lại" Command="{Binding ShowLoginCommand}" Background="#95a5a6"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
