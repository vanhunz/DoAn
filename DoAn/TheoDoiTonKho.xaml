<Window x:Class="DoAn.TheoGioiTonKho"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAn"
        mc:Ignorable="d"
        Title="TheoGioiTonKho" Height="450" Width="800">
    <Grid Margin="20" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Theo dõi tồn kho" FontSize="28" FontWeight="SemiBold" Margin="0 0 0 20"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 20" HorizontalAlignment="Left" >
            <Border Background="Azure" CornerRadius="12" Padding="20" Margin="0 0 20 0" Width="250">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Tổng sản phẩm" FontSize="16" FontWeight="DemiBold"/>
                    <TextBlock Text="{Binding TongSanPhamText}" FontSize="14" Foreground="Gray" Margin="0 8 0 0"/>
                </StackPanel>
            </Border>

            <Border Background="Azure" CornerRadius="12" Padding="20" Margin="0 0 20 0" Width="250">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Sắp hết hàng" FontSize="16" FontWeight="DemiBold"/>
                    <TextBlock Text="{Binding SapHetHangText}" FontSize="14" Foreground="Orange" Margin="0 8 0 0"/>
                </StackPanel>
            </Border>
            <Border Background="Azure" CornerRadius="12" Padding="20" Width="250">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Hết hàng" FontSize="16" FontWeight="DemiBold"/>
                    <TextBlock Text="{Binding HetHangText}" FontSize="14" Foreground="Red" Margin="0 8 0 0"/>
                </StackPanel>
            </Border>
        </StackPanel>
        <Border Grid.Row="2" Background="Azure" CornerRadius="12" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Danh sách sản phẩm" FontSize="18" FontWeight="Medium" Margin="0 0 0 10"/>

                <DataGrid x:Name="dgProducts" AutoGenerateColumns="False" HeadersVisibility="Column"
                          CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                          RowHeight="40" FontSize="14" GridLinesVisibility="Horizontal" BorderThickness="0"
                          ItemsSource="{Binding DanhSachSanPham}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã SP" Binding="{Binding MaSP}" Width="100"/>
                        <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding TenSP}" Width="*"/>
                        <DataGridTextColumn Header="Danh mục" Binding="{Binding DanhMuc}" Width="130"/>
                        <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" Width="80"/>
                        <DataGridTextColumn Header="Đơn vị" Binding="{Binding DonVi}" Width="90"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
